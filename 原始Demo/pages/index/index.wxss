.list {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  align-content: flex-start;
  align-items: center;
  padding: 0 20rpx;
  margin: 0 0 50rpx 0;
}

.poi {
  position: relative;
  margin-bottom: 12rpx;
  margin-top: 50rpx;
  margin-left: 3rpx;
}

.poi image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 8%;
}

.music {
  width: 100rpx;
  height: 100rpx;
  display: block;
  padding: 0;
  background-size: cover;
  position: fixed;
  right: 15rpx;
  bottom: 100rpx;
  border-radius: 50%;
  z-index: 999;
}

.poi text {
  position: absolute;
  top: 200rpx;
  right: 50rpx;
  font-size: 25rpx;
  word-break: keep-all;
}

.jiazai {
  width: 100vw;
  position: fixed;
  bottom: 0;
}

.add_layer {
  width: 100%;
  height: 100%;
  background: rgba(66, 69, 72, 0.74);
  position: fixed;
  left: 0;
  top: 0;
}

.add_layer input, .add_layer textarea, .add_layer button {
  width: 80%;
  margin: 0 auto;
  margin: 15px auto;
  font-size: 14px;
  padding: 10rpx;
}

.add_layer input, .add_layer textarea {
  background: #fff;
}

.diary_list {
  border-bottom: 1px solid #ccc;
  margin: 0px 0;
  padding: 10px;
  position: relative;
}

.diary_list text {
  font-size: 16px;
  color: #1e1e1e;
}

.diary_list view {
  font-size: 14px;
  padding: 5px 0;
}

.diary_list button {
  position: absolute;
  right: 15px;
  top: 12px;
}

.diary_list button.modify {
  right: 90px;
}

.weui-media-box__info__operate {
  float: right;
  color: #1e1e1e;
  padding-right: 0em;
}

.weui-media-box__info__operate .del {
  margin-right: 15px;
}

.toWrite {
  width: 100rpx;
  height: 100rpx;
  display: block;
  /*background:url("/image/add.png") no-repeat;*/
  padding: 0;
  background-size: cover;
  position: fixed;
  right: 74rpx;
  bottom: 100rpx;
  border-radius: 50%;
  z-index: 999;
}

.weui-media-box {
  padding-bottom: 0px;
}

.weui-media-time {
  width: 220rpx;
  height: 1em;
  overflow: hidden;
}

.weui-cells__title {
  text-align: left;
}

textarea, input {
  text-align: left;
  color: #1e1e1e;
}

.weui-cells {
  border: 1px solid #3891f8;
}

.weui-cells__title {
  padding-left: 0px;
  color: #1e1e1e;
}

.weui-dialog__ft button {
  background: none;
  padding: 0px;
  margin: 0px;
}

form .weui-dialog__bd:first-child {
  padding: 0px 30rpx 1.7em;
}

.page__ft {
  padding-top: 40px;
  padding-bottom: 10px;
}

.searchbar-result {
  border: none;
  margin-top: 0;
  font-size: 14px;
}

.searchbar-result:before {
  display: none;
}

.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
  z-index: 1000;
  color: #fff;
}

.drawer_attr_box {
  width: 100%;
